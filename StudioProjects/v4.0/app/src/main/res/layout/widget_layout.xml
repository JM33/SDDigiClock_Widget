<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/FrameLayout">




    <ImageView
        android:id="@+id/BackGround"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/grey" />

    <LinearLayout
        android:id="@+id/linearLayoutAdvanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <!--android:background="@drawable/clearbg"
        -->

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center">



                <TextView
                    android:id="@+id/ClockText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="12:34"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15dp" android:visibility="gone"/>


                <TextView
                    android:id="@+id/AMPMText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="AM"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15dp" android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/DateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blank"
            android:text="January 1, 2012" android:layout_gravity="center_horizontal" android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutClassic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/clearbg">

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center">

                <Button
                    android:id="@+id/ClockTextClassic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Widget Loading..."
                    android:background="@drawable/blank"
                    android:textSize="20dp"
                    android:padding="0dp"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/AMPMTextClassic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="AM"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15dp" android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/DateTextClassic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blank"
            android:text="January 1, 2012"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/SettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blank" />

            <Button
                android:id="@+id/bottomLeftButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blank" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:id="@+id/ClockButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/blank" />
            <!--
            <Button
                android:id="@+id/DateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/blank" />
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blank" />

            <Button
                android:id="@+id/bottomRightButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blank" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>