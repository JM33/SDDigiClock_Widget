<resources>



    <style name="Theme.MaterialYouColors" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorOnPrimary">@color/secondaryVariantColor</item>



        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryVariantColor</item>

        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/primaryColor</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>

    </style>


    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?android:textColorPrimary</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>



</resources>
