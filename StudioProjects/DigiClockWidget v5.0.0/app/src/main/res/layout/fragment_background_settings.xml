<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackgroundSettingsFragment"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/AppBarHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutBackgrounds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?android:attr/colorBackground"

        android:paddingBottom="?attr/actionBarSize">

        <ScrollView
            android:id="@+id/BGSscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/colorBackground"

            >

            <LinearLayout
                android:id="@+id/linearLayoutBG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/checker">
                <LinearLayout
                    android:id="@+id/linearLayoutBGHelper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/BGselect2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/LinearLayout01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/blank"
                            android:gravity="center_horizontal|center_vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/textViewBG2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/custom_color"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivCB2"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            app:srcCompat="@drawable/checkbox" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/BGSelect3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/LinearLayout03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/blank"
                            android:gravity="center_horizontal|center_vertical">

                            <TextView
                                android:id="@+id/textViewBG3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/custom_color"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivCB3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            app:srcCompat="@drawable/checkbox" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/BGselect0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/LinearLayout06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/blank"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/imageViewBG0"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/time"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivCB0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            app:srcCompat="@drawable/checkbox" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/BGselect1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/LinearLayout04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/clearbg"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/imageViewBG1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/time"
                                />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivCB1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:paddingLeft="20dp"
                            app:srcCompat="@drawable/checkedbox" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>



</LinearLayout>