<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DateSettingsFragment"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/AppBarHeader"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:textColor="@android:color/white"
        android:background="?android:attr/colorBackground">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blank"
                android:orientation="vertical"
                android:paddingBottom="?attr/actionBarSize">

                <LinearLayout
                    android:id="@+id/LinearLayout05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p_date_size"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="20dp"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/DateSizeSB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="50"
                    android:paddingTop="10dp"
                    android:paddingStart="25dp"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp"
                    android:theme="@style/Theme.MaterialYouColors"/>
                <LinearLayout
                    android:id="@+id/LinearLayoutMatchClockColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:orientation="vertical">
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/matchClockColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/blank"
                        android:drawablePadding="10dp"
                        android:text="@string/p_date_match_clock_color"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:paddingTop="10dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="20dp"
                        android:theme="@style/Theme.MaterialYouColors"/>
                    <TextView
                        android:id="@+id/textViewSummaryMatchClockColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="50dp"
                        android:text="@string/p_date_match_clock_color_summary"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayoutDateTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/DateTextColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blank"
                        android:text="@string/p_date_color"
                        android:gravity="left"
                        android:drawablePadding="10dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:paddingTop="10dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="30dp"/>
                    <TextView
                        android:id="@+id/textViewSummaryDateTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="50dp"
                        android:text="@string/p_date_color_summary"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLayoutDateFormat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/DateFormat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blank"
                        android:drawablePadding="10dp"
                        android:text="@string/p_date_format"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:paddingTop="10dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="20dp"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/textViewSummaryDateFormat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="50dp"
                        android:text="@string/p_date_format_summary"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="20dp" />
                </LinearLayout>
                <!--
        <Button android:id="@+id/DateFormat" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/blank" android:drawablePadding="10dp" android:paddingLeft="30dp" android:text="@string/p_date_format" android:textSize="25dp" />
   -->
                <LinearLayout
                    android:id="@+id/LinearLayoutShowDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:orientation="vertical">
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/ShowDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blank"
                        android:drawablePadding="10dp"
                        android:text="@string/p_show_date"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:paddingTop="10dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="20dp"
                        android:gravity="left"
                        android:theme="@style/Theme.MaterialYouColors"/>
                    <TextView
                        android:id="@+id/textViewSummaryShowDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="50dp"
                        android:text="@string/p_show_date_summary"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>