<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/FontSettingsLinearLayout"
    tools:context=".FontSettingsFragment"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/FontLoadingScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ProgressBar
            android:id="@+id/progressBarFonts"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:text="@string/p_loading_fonts" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/AppBarHeader"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">
    </LinearLayout>
    <ScrollView
        android:id="@+id/ScrollViewFonts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground">
        <LinearLayout
            android:id="@+id/LinearLayoutFontsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="?attr/actionBarSize"
            >

        </LinearLayout>

    </ScrollView>
</LinearLayout>