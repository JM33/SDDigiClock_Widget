<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClockSettingsFragment"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/AppBarHeader"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:textColor="?android:attr/textColorPrimary"
        android:background="?android:attr/colorBackground">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="?attr/actionBarSize">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/blank"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="20dp"
                            android:text="@string/p_clock_size"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/ClockSizeSB"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:progress="50"
                        android:paddingTop="10dp"
                        android:paddingStart="25dp"
                        android:paddingBottom="20dp"
                        android:paddingEnd="20dp"
                        android:theme="@style/Theme.MaterialYouColors"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/LinearLayoutClockTextColor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ClockTextColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:background="@drawable/blank"
                            android:drawablePadding="50dp"
                            android:paddingTop="10dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="30dp"
                            android:text="@string/p_clock_color"
                            android:textSize="25dp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            />
                        <TextView
                            android:id="@+id/textViewSummaryClockTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="0dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="50dp"
                            android:text="@string/p_clock_color_summary"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LinearLayoutShow24"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical">
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/TwentyFour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blank"
                            android:gravity="left|center_vertical"
                            android:drawablePadding="10dp"
                            android:paddingTop="10dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="20dp"
                            android:text="@string/p_military"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:theme="@style/Theme.MaterialYouColors"/>
                        <TextView
                            android:id="@+id/textViewSummaryShow24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="0dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="50dp"
                            android:text="@string/p_military_summary"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LinearLayoutShowAMPM"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical">
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/ShowAMPM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:background="@drawable/blank"
                            android:drawablePadding="10dp"
                            android:paddingTop="10dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="20dp"
                            android:text="@string/p_show_ampm"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:theme="@style/Theme.MaterialYouColors"/>
                        <TextView
                            android:id="@+id/textViewSummaryShowAMPM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="0dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="50dp"
                            android:text="@string/p_show_ampm_summary"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutStackClock"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical">
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/ShowStackClock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:background="@drawable/blank"
                            android:drawablePadding="10dp"
                            android:paddingTop="10dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="20dp"
                            android:text="@string/p_stack_clock"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:theme="@style/Theme.MaterialYouColors"/>
                        <TextView
                            android:id="@+id/textViewSummaryShowStackClock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="0dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="50dp"
                            android:text="@string/p_stack_clock_summary"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LinearLayoutClockClipApp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ClockClickApp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:background="@drawable/blank"
                            android:drawablePadding="10dp"
                            android:paddingTop="10dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="20dp"
                            android:text="@string/clock_click_app"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"/>
                        <TextView
                            android:id="@+id/textViewSummaryClockClickApp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="0dp"
                            android:paddingStart="25dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="50dp"
                            android:text="@string/clock_click_app_summary"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="20dp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>